#VRML V2.0 utf8

Viewpoint{
	position 0 10 0
	orientation -1 0 0 1.57
}

DirectionalLight {
	direction 0 -1 0
	intensity 0.5
	ambientIntensity 0
}

DEF FFrame Transform {
	translation 0 0 0
	children [
		#field
		Inline {url "battle_field.wrl"}
	]
}

DEF PFrame Transform {
	translation 0 0 0
	children [
		#penguin
		Inline {url "pred.wrl"}
	]
}

DEF PGFrame Transform {
	translation 0 0 0
	children [
		#penguin
		Inline {url "pgreen.wrl"}
	]
}

DEF PuckFrame Transform {
	translation 0 0 0
	children [
		Transform{
			translation 0 -0.1434 0
		#puck
			children[
				Inline {url "puck.wrl"}
			]
		}
	]
}

DEF RacketFrame Transform {
	translation 0.65 -0.45 1.3
	children [
		#racket
		Inline {url "racket.wrl"}
	]
}

DEF GoalFrame Transform {
	scale 0.1 0.1 0.1
	children [
		#goallogo
		Inline {url "goal.wrl"}
	]
}

Inline{url "number.wrl"}

DEF BOTTOM Transform {
	children [
		Inline{url "bottom.wrl"}
	]
}

DEF BACK Transform {
	children [
		Inline{url "back.wrl"}
	]
}

DEF Default Viewpoint { position 0 2.7 -0.75 orientation 1 0 0 1.57 description "Default" }

Background { topUrl "aurora1.jpg" 
	backUrl "aurora1.jpg" 
